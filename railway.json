{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "healthcheckPath": "/",
  "variables": {
    "DJANGO_SETTINGS_MODULE": "config.settings",
    "PYTHONPATH": ".",
    "PORT": "8000"
  }
}

